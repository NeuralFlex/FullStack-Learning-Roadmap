# =================================================================
# MEDIA PROCESSING APP - ENVIRONMENT CONFIGURATION
# =================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to version control

# =================================================================
# AWS CONFIGURATION (REQUIRED for S3 operations)
# =================================================================
# Get these from AWS IAM Console or your admin
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=us-east-1

# =================================================================
# S3 BUCKET CONFIGURATION
# =================================================================
# Create a bucket in AWS S3 Console before running the app
S3_BUCKET=media-processing-app-bucket

# =================================================================
# APPLICATION SETTINGS
# =================================================================
DEBUG=True
LOG_LEVEL=INFO

# =================================================================
# FRONTEND SETTINGS (Used by Docker Compose)
# =================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=Media Processing App
VITE_APP_VERSION=1.0.0
VITE_MAX_FILE_SIZE_MB=100
VITE_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
VITE_SUPPORTED_VIDEO_TYPES=video/mp4,video/webm,video/ogg

# =================================================================
# SECURITY NOTES
# =================================================================
# - Keep this file secure and never share it
# - Use AWS IAM roles in production instead of access keys
# - Rotate credentials regularly
# - Use environment-specific buckets (dev, staging, prod)
# - Enable bucket versioning and backups
